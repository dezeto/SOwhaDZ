<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentUser"
    android:background="?attr/backgroundColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="32dp"
            android:elevation="32dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/indonesia"
                android:background="@android:color/transparent"
                app:cardCornerRadius="64dp"
                android:layout_gravity="center"
                android:elevation="24dp"
                >

                <ImageView
                    android:id="@+id/user_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/indonesia"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_name"
                android:fontFamily="@font/proxima_nova"
                android:textColor="?attr/textColor"
                android:textSize="24sp"
                android:textFontWeight="700"
                android:layout_marginTop="24sp"
                />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:gravity="center"
                android:fontFamily="@font/proxima_nova"
                android:textColor="?attr/textColor"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:layout_marginTop="8sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            app:cornerRadius="16dp"
            android:background="?attr/colorPrimary"
            android:paddingTop="16dp"
            android:layout_weight="1"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/user_preferred_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/proxima_nova"
                    android:paddingVertical="16dp"
                    android:text="@string/choose_preferred_language"
                    android:textColor="@color/colorWhite"
                    android:textFontWeight="700"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_round_language_24"
                    app:iconPadding="32dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="8dp"
                    />

                <Button
                    style="?android:attr/borderlessButtonStyle"

                    android:id="@+id/user_view_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/proxima_nova"
                    android:paddingVertical="16dp"
                    android:text="@string/view_history"
                    android:textColor="@color/colorWhite"
                    android:textFontWeight="700"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_round_history_24"
                    app:iconPadding="32dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="8dp"
                    />

                <Button
                    style="?android:attr/borderlessButtonStyle"

                    android:id="@+id/user_share_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/proxima_nova"
                    android:paddingVertical="16dp"
                    android:text="@string/share_app"
                    android:textColor="@color/colorWhite"
                    android:textFontWeight="700"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_round_share_24"
                    app:iconPadding="32dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="8dp"
                    />


                <Button
                    style="?android:attr/borderlessButtonStyle"

                    android:id="@+id/user_change_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/proxima_nova"
                    android:paddingVertical="16dp"
                    android:text="@string/change_theme"
                    android:textColor="@color/colorWhite"
                    android:textFontWeight="700"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_round_brush_24"
                    app:iconPadding="32dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="8dp"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/user_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/proxima_nova"
                android:paddingVertical="16dp"
                android:text="@string/sign_out"
                android:textColor="@color/colorPrimary"
                android:textFontWeight="700"
                android:textSize="14sp"
                app:cornerRadius="32dp"
                android:gravity="center"
                android:paddingTop="16dp"
                android:layout_marginHorizontal="64dp"
                android:layout_marginBottom="8dp"
                />



        </LinearLayout>

    </LinearLayout>

</FrameLayout>